source ../.venv/bin/activate 

if [ $? -eq 0 ]
then
    echo "SUCCESS: venv was activated."
else
    echo "FAIL: cannot activate venv"
    echo "Trying to create the venv in the folder: ../.venv"
    python3 -m venv ../.venv
    echo "Installing the dependencies"
    pip install -r requirements.txt
fi
